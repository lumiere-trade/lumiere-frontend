# Environment Variables Template
# Copy to .env.local and fill in your values

# =============================================================================
# API ENDPOINTS
# =============================================================================

# Pourtier API (Gateway - all backend requests go through here)
# Development: http://localhost:9000
# Production: https://api.lumiere.trade
NEXT_PUBLIC_API_URL=http://localhost:9000

# Prophet AI Service (Strategy Generation)
# Development: http://localhost:9083
# Production: https://prophet.lumiere.trade
NEXT_PUBLIC_PROPHET_URL=http://localhost:9083

# Courier WebSocket (Real-time events)
# Development: ws://localhost:9765
# Production: wss://ws.lumiere.trade
NEXT_PUBLIC_WS_URL=ws://localhost:9765

# Passeur Bridge (Blockchain interactions)
# Development: http://localhost:9766
# Production: https://bridge.lumiere.trade
NEXT_PUBLIC_BRIDGE_URL=http://localhost:9766

# =============================================================================
# SOLANA CONFIGURATION
# =============================================================================

# Network: mainnet-beta | devnet | testnet
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# RPC URL for Solana network
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# =============================================================================
# AUTHENTICATION
# =============================================================================

# Auth message for wallet signature (must match backend)
NEXT_PUBLIC_AUTH_MESSAGE=Sign this message to authenticate with Lumiere

# =============================================================================
# ADMIN ACCESS (Development only)
# =============================================================================

# Admin credentials for development
# WARNING: Change these in production!
NEXT_PUBLIC_ADMIN_USERNAME=your_admin_username
NEXT_PUBLIC_ADMIN_PASSWORD=your_admin_password
